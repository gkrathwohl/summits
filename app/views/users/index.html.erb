<style>
.table th {
   text-align: center;   
}
.center_table {
  padding-top: 30px;
}
.content {
  padding-top: 5%;
}
.number-align{
  text-align: right;
}
</style>


<div class="container">
  <div class="row">
    <div class="column col-md-offset-3 center_table">
      <h3 class="text-center">Top Summiters</h3>
      <table class="table text-center">
        <tbody>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Total Summits</th>
            <th>Unique Summits</th>
          </tr>
          <% @users.each_with_index do |user, index| %>
            <tr>
              <td><%= index + 1 %>. </td><%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script>  
  $(document).ready(function () {
      $('#athletes-nav').addClass('active');
  });
</script>